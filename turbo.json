{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["VITE_API_URL", "REACT_APP__API_URL"],
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "remoteCache": {
    "signature": true
  }
}
